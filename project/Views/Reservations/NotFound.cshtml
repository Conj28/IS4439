
@{
    ViewData["Title"] = "NotFound";
}

@model project.Models.Booking

<link rel="stylesheet" href="~/css/datatables.min.css">

<section class="hero-wrap hero-wrap-2 bg-image"  data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">No bookings Found</h1>
              
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb">
    <div class="container-fluid px-0">
        <div class="row d-flex justify-content-center no-gutters">
            <div class="col-md-8 order-md-last ftco-animate makereservation p-4 p-md-5 pt-5">
                <div class="py-md-5">

                    <div class="row">

                        <div class="heading-section ftco-animate mb-5">
                            <span class="subheading">Error</span>
                            <h2 class="mb-4">@ViewBag.Message</h2>
                        </div>

                        <div class="col-lg-12 mb-4">
                            <div class="card">


                                <ul class="listHorizontal card py-3 bg-image">
                                    @using (Html.BeginForm("Date", "Reservations"))
                                    {
                                        <li class="ml-4"><p class="text-white">Filter by Date</p></li>
                                        <li class="ml-4">@Html.TextBox("dt", "", new { @type = "date" })</li>

                                        <li class="ml-4"><input type="submit" value="Filter" class="btn btn-primary py-3 px-5" /></li>
                                        <li class="ml-4"> <a asp-controller="Reservations" asp-action="Index"><input type="button" value="Reset Filter" class="btn btn-primary py-3 px-5" /></a></li>
                                    }
                                </ul>



                            </div>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>

</section>



